SELECT *
FROM (
    SELECT 'ETF' AS source, *
    FROM MIDAS.TBL_ETF 
    WHERE SECURITYID = '745749' AND ASATDATE = '2023-04-12' 
    UNION ALL
    SELECT 'ETF_POSITIONS' AS source, *
    FROM MIDAS.TBL_ETFPOSITIONS 
    WHERE SECURITYID = '745749' AND ASATDATE = '2023-04-12' 
    UNION ALL
    SELECT 'ETF_BASKET_POSITIONS' AS source, *
    FROM MIDAS.TBL_ETFBASKETPOSITIONS 
    WHERE SECURITYID = '745749' AND ASATDATE = '2023-04-12' 
    UNION ALL
    SELECT 'ETF_CONSTITUENTS' AS source, *
    FROM MIDAS.TBL_ETFCONSTITUENTS 
    WHERE SECURITYID = '745749' AND ASATDATE = '2023-04-12' 
) AS combined
ORDER BY ASATDATE DESC;
